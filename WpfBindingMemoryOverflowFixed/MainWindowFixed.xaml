<Window x:Class="WpfBindingMemoryOverflowFixed.MainWindowFixed"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfBindingMemoryOverflowFixed"
        Title="WPF Binding Memory Overflow (Fixed)" Height="600" Width="900">
    <Window.Resources>
        <!-- Render each LeakyModel as a LeakyTile -->
        <DataTemplate DataType="{x:Type local:LeakyModelFixed}">
            <local:LeakyTileFixed/>
        </DataTemplate>
    </Window.Resources>

    <!-- The Window sets its own instance as DataContext in code-behind. -->
    <Grid Name="RootGrid" Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="Start" Width="100" Margin="0,0,8,0" Click="Start_Click"/>
            <Button Content="Stop" Width="80" Margin="0,0,8,0" Click="Stop_Click"/>
            <Button Content="GC.Collect" Width="100" Margin="0,0,8,0" Click="Gc_Click"/>
            <TextBlock Name="InfoText" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Data-driven UI: ItemsControl bound to ObservableCollection<T> -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Tiles}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <TextBlock Grid.Row="2" Margin="0,8,0,0" Foreground="DimGray" TextWrapping="Wrap">
            Fixed version: INPC properties + ItemsControl. Memory should remain near baseline across cycles.
        </TextBlock>
    </Grid>
</Window>
