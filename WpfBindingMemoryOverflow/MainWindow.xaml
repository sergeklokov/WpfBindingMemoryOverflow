<Window x:Class="WpfBindingMemoryOverflow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Binding Memory Overflow Demo" Height="600" Width="900">
    <Grid Name="RootGrid" Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="Start Leak" Width="100" Margin="0,0,8,0" Click="StartLeak_Click"/>
            <Button Content="Stop" Width="80" Margin="0,0,8,0" Click="Stop_Click"/>
            <Button Content="GC.Collect" Width="100" Margin="0,0,8,0" Click="Gc_Click"/>
            <TextBlock Name="InfoText" VerticalAlignment="Center"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <UniformGrid Name="TilesHost" Columns="4"/>
        </ScrollViewer>

        <TextBlock Grid.Row="2" Margin="0,8,0,0" Foreground="DimGray" TextWrapping="Wrap">
            This demo intentionally leaks by binding to non-INPC/DP properties across UI elements.
        </TextBlock>
    </Grid>
</Window>
